#!/usr/bin/env bash

# this doesn't run in nix-shell
# this runs very early on

# enable SSHD
mkdir -p ~/.ssh
chmod og-rw ~/
>>~/.ssh/authorized_keys echo "ssh-rsa  cardno:7126708"

# activate secrets
# TODO: should this just include the entire HM config?
mkdir -p ~/.config/sops/age/
echo "${SOPS_AGE_KEY}" > ~/.config/sops/age/keys.txt
sudo groupadd keys
sudo gpasswd --add "${USER}" keys
secrets="$(mktemp -d)"
nix "${nixargs[@]}" build "${buildargs[@]}" --out-link "${secrets}/result" '.#secrets'
sudo "${secrets}"/result